@using EntityLayer.Concrete
@model List<Category>
    @{
        Layout = null;
    }
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td>@x.CategoryDescription</td>
            <td>@x.CategoryStatus</td>
            <td><button class="btn btn-success">Güncelle</button></td>
        </tr>
        }
    </table>
<br />
<a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>